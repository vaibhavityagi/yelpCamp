<% layout('layouts/boilerplate') %>

    <div id="cluster-map"></div>

    <div class="container col-11">
        <h1 class="mt-5 mb-3 text-center">Campground Goodness</h1>

        <% for(let cg of allCgs){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= cg.images[0].url %>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= cg.title %>
                            </h5>
                            <p class="card-text">
                                <%= cg.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= cg.location %>
                                </small>
                            </p>
                            <a href="/campgrounds/<%= cg._id %>" class="btn btn-primary">View <%= cg.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>

    <script>
        const mapToken = '<%= process.env.MAPBOX_TOKEN %>'
        let campgrounds = '<%- JSON.stringify(allCgs) %>'
    </script>
    <script src="/scripts/indexClusterMap.js"></script>