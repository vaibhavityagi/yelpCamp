<% layout('layouts/boilerplate') %>

    <div class="col-6 offset-3">
        <div id="campgroundImages" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% campground.images.forEach( (image, i)=> { %>
                    <div class="carousel-item <%= i===0 ? 'active' : '' %>">
                        <img src="<%= image.url%>" class="d-block w-100" alt="...">
                    </div>
                    <% }) %>
                        <% if(campground.images.length> 1){ %>

                            <button class="carousel-control-prev" type="button" data-bs-target="#campgroundImages"
                                data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#campgroundImages"
                                data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                            <% } %>

            </div>
        </div>


        <div class="mt-3">
            <form class="d-inline" action="/campgrounds/<%=campground._id%>/images" method="POST"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <input class="form-control" type="file" name="image" id="image" required multiple>
                </div>
                <button class="btn btn-success">Upload</button>
            </form>
        </div>

        <a href="/campgrounds/<%= campground._id %>">Back to campground</a>