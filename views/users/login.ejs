<% layout('layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1592351763700-b9b35a6465ea?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Sign In</h5>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" required
                                    autofocus>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-success">Log In</button>
                            </div>
                        </form>
                    </div>
                </div>

                <p class="text-muted text-center mt-2">New to YelpCamp?</p>
                <div class="mb-4">
                    <form action="/register" method="GET">
                        <div class="d-grid">
                            <button class="btn btn-success">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>