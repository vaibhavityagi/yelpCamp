<% layout('layouts/boilerplate') %>

    <% layout('layouts/boilerplate') %>

        <div class="container d-flex justify-content-center align-items-center">
            <div class="row">
                <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                    <div class="card shadow">
                        <img src="https://images.unsplash.com/photo-1592351763700-b9b35a6465ea?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
                            alt="" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title">Sign Up</h5>

                            <form action="/register" method="POST" class="validated-form" novalidate>
                                <div class="mb-3">
                                    <label class="form-label" for="username">Username</label>
                                    <input class="form-control" type="text" id="username" name="username" required
                                        autofocus>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="email">Email</label>
                                    <input class="form-control" type="email" id="email" name="email" required>
                                    <div class="valid-feedback">
                                        Valid email
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="password">Password</label>
                                    <input class="form-control" type="password" id="password" name="password" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-success">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <p class="text-muted text-center mt-2">Already a user?</p>
                    <div class="mb-4">
                        <form action="/login" method="GET">
                            <div class="d-grid">
                                <button class="btn btn-success">Sign In</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

        </div>